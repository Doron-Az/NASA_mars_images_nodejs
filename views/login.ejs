<%- include('includes/head.ejs') %>


    <div id="loadingBuffering" class="d-none"></div>
    <input type="hidden" id="errorMsgEmail" name="errorMsgEmail" value="<%=error_msg_email%>">
    <input type="hidden" id="errorMsgPassword" name="errorMsgPassword" value="<%=error_msg_password %>">
    <input type="hidden" id="emailHidden" name="emailHidden" value="<%=email_hidden%>">

    <div class="row m-3" id="test">
        <div class="col-md-3 col-lg-4"></div>
        <div class="col-12 col-md-6 col-lg-4">

            <div class="card">
                <img src="../images/nasa-logo.gif" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5><b>Please Login or sign up</b></h5>
                    <form id="loginForm" action="/login" method="post">
                        <div class="form-group">
                            <label for="emailInput">Email address</label>
                            <input type="email" class="form-control" id="emailInput" name="emailInput" aria-describedby="emailHelp" placeholder="Enter email" required>
                            <div class="text-danger errormessage"></div>
                        </div>
