                            <label for="passwordInput">Password</label>
                            <input type="password" class="form-control" id="passwordInput" name="passwordInput" placeholder="Password" required>
                            <div class="text-danger errormessage"></div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-outline-primary m-2">Login</button>
                        </div>

                    </form>

                    <form id="signUpForm" method="post" action="/register">
                        <p class="text-center">Don't have an account?
                            <button type="submit" formaction="/register" class="text-primary btn btn-outline-light">Sign
                                Up
                            </button>
                        </p>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-md-3 col-lg-4"></div>
    </div>
