<%- include('includes/head.ejs') %>

    <div class="container-fluid">
        <div id="loadingBuffering" class=""></div>

        <div class="row">
            <div style="background: url(https://www.science.org.au/curious/sites/default/files/article-banner-image/2-mars-banner.jpg)" class="jumbotron bg-cover text-white">
                <div class="container py-5 text-center">
                    <h1 class="display-4 font-weight-bold">Mars images browser</h1>
                    <p class="font-italic mb-2">Browse NASA Mars images and save your preferred ones..</p>
                    <button type="button" class="btn btn-dark px-5" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        About
                    </button>
                </div>
            </div>
        </div>

        <div class="m-2">
            <h4><b>Hello, <%=user_name%></b></h4>
        </div>

        <div class="row">
            <div class="col-12 col-md-6 ">
                <form id="form-nasa-api">
                    <div class="m-2">
                        <h4 class="alert alert-dark fw-bold"><b>Search for images</b></h4>
                        <label for="dateInput">Date (YYYY-MM-DD) or Sol:</label>
                        <input type="text" class="form-control" id="dateInput" placeholder="YYYY-MM-DD or Sol">
                        <div class="text-danger errormessage"></div>
                    </div>

                    <div class="m-2">
                        <label for="missionInput">Select Mission:</label>
                        <select class="form-control" id="missionInput">
                            <option value="" disabled selected>Choose mission</option>
                        </select>
                        <div class="text-danger errormessage"></div>
                    </div>

                    <div class="m-2">
                        <label for="cameraInput">Select Camera:</label>
                        <select class="form-control" id="cameraInput">
                            <option value="" disabled selected>Choose camera</option>
                        </select>
                        <div class="text-danger errormessage"></div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-outline-secondary" id="searchBtn"> Search</button>
                            <button type="button" class="btn btn-outline-danger" id="clearBtn"> Clear</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-12 col-md-6">
                <div class="m-2">
                    <h4 class="alert alert-dark fw-bold"> <b>Saved images</b></h4>
                    <button type="button" class="btn btn-outline-secondary" id="slideShowBtn">Start slide show</button>
                    <button type="button" class="btn btn-outline-secondary" id="editBtn">Edit Mode</button>
                    <button type="button" class="btn btn btn-outline-danger togglevisible d-none" style="float: right;" id="clearAllBtn">Clear all</button>

                    <ol id="savedList">
                    </ol>
                </div>
            </div>
        </div>

        <!--add d-non on html-->
        <div class="row">
            <div class="col-3"></div>
            <div id="imagesCarousel" class="carousel slide col-6 d-none" data-bs-ride="carousel">
                <h4 class="p-3 mb-2 bg-dark text-white"><b>Slide Show</b></h4>
                <div class="carousel-inner" id="myCarousel">
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#imagesCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#imagesCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="col-3"></div>
        </div>

        <div class="row m-2">
            <h4 class=" alert alert-dark fw-bold"><b>Search result</b></h4>
            <h4 class="p-3 mb-2 bg-danger text-white d-none" id="noImagesFound"><b>No images found!</b></h4>
            <div class="row" id="photosGallery">
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Who we are?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <p>Doron Azulay <br> DoronAz@edu.hac.ac.il
                    </p>
                    <p>
                        Liron Farzam <br> LironFa@edu.hac.ac.il
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>

    <!--custom modal-->
    <div class="modal" tabindex="-1" id="errorModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Oops!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="errorModalText"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!--custom modal-->
    <div class="modal" tabindex="-1" id="deleteAllSavedImageList">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-danger">Warning</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="errorModalText">You're about to delete all the photos you saved, are you sure you want to continue?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-sm btn-outline-success" data-bs-dismiss="modal" id="confirmDeleteSavedList">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('includes/end.ejs') %>